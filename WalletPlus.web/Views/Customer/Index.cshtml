@model IEnumerable<WalletPlus.web.Models.Customer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customers List</h2>
        </div>
        <div>
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Create new Customer</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                       Last Name
                    </th>
                    <th>
                        Middle Name
                    </th>
                     <th>
                        Gender
                    </th>
                     <th>
                        Marital STatus
                    </th>
                     <th>
                        Date Of Birth
                    </th>
                     <th>
                        Country
                    </th>
                     <th>
                        State
                    </th>
                     <th>
                        City
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var Customer in Model)
                {
                    <tr>
                        <td width="30%">@Customer.FirstName</td>
                        <td width="30%">@Customer.LastName</td>
                         <td width="30%">@Customer.MiddleName</td>
                        <td width="30%">@Customer.BirthDate</td>
                         <td width="30%">@Customer.Gender</td>
                        <td width="30%">@Customer.MaritalStatus</td>
                         <td width="30%">@Customer.Country</td>
                        <td width="30%">@Customer.State</td>
                         <td width="30%">@Customer.City</td>
                        
                        <td width="40%">
                          <div class="col-6 text-right">
                              <a asp-controller="Customer" asp-action="Update" asp-route-Id="@Customer.Id" class="btn btn-primary mx-1" >Update</a>
                              <a asp-controller="Customer" asp-action="Delete" asp-route-Id="@Customer.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                       
                        </td>

                        

                    </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No items created yet</p>
    }

</div>